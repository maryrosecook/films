<!DOCTYPE html>
<html>
  <head>
    <title>Films</title>
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <meta name = "viewport" content = "width = device-width">
  </head>
  <body>
    {{#dates}}
      <h2>{{date}}</h2>
      {{#films}}
        <div>
          <h3><a href="{{imdburl}}">{{film}}</a></h3>
          <div>{{plot}} Director: {{director}}</div>
          <div>
            {{#metascore}}{{metascore}}%{{/metascore}}
            {{#rating}}{{rating}}/10{{/rating}}
          </div>

          <div>
            {{#cinemas}}
              <div>
                {{#listings}}
                  <span class="{{partOfDay}}">
                    <a href="{{url}}">{{time}}</a>
                  </span>
                {{/listings}}
                &nbsp;({{cinema}})
              </div>
            {{/cinemas}}
          </div>

          {{#trailer}} {{! making block so no render if no trailer}}
            <div><a href="{{trailer}}">Trailer</a></div>
          {{/trailer}}
        </div>
        <br/>
      {{/films}}
    {{/dates}}
  </body>
</html>
